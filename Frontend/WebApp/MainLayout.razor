@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<MudThemeProvider IsDarkMode="DarkMode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Style="@($"background:{Colors.Pink.Darken1};")" Fixed="false">
        <MudIconButton Icon="@Icons.Material.Filled.QrCodeScanner" OnClick="@(() => NavigationManager.NavigateTo("/Scan"))" />
        <MudSpacer />
        <MudText Typo="Typo.h4" Style="cursor:pointer;" onclick="@(() => NavigationManager.NavigateTo("/"))">
            Inventar App
        </MudText>
        <MudSpacer />
        <MudToggleIconButton @bind-Toggled="DarkMode"
                             Icon="@Icons.Material.Filled.LightMode"
                             Style="@($"color:{(DarkMode ? Colors.Purple.Darken4 : Colors.Yellow.Default)};")"
                             ToggledIcon="@Icons.Material.Filled.DarkMode"
                             title="@(DarkMode ? "On" : "Off")" />
    </MudAppBar>

    @Body
</MudLayout>

@code {
    public bool _open = false;
    public bool DarkMode { get; set; }

    private void ToggleDrawer()
    {
        _open = !_open;
    }
}